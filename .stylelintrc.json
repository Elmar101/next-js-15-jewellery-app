{
  "extends": ["stylelint-config-standard"],
  "customSyntax": "postcss-lit",
  "ignoreFiles": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "rules": {
    "color-name": "never",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
      }
    ],
    "no-descending-specificity": null
  }
}
